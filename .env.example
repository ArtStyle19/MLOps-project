# Domain Configuration
DOMAIN=settinel.lat
API_DOMAIN=api.settinel.lat
TRAEFIK_HOST=traefik.settinel.lat
LETSENCRYPT_EMAIL=your-email@example.com

# Docker Configuration
DOCKERHUB_USER=your-dockerhub-username
BACKEND_TAG=latest
FRONTEND_TAG=latest

# Backend Configuration
FLASK_ENV=production
PORT=5000

# AWS S3 Configuration
# Option 1: Use AWS credentials (not recommended for production)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1

# Option 2: For EC2 instances, leave AWS credentials empty and use IAM role
# Just comment out or remove AWS_ACCESS_KEY_ID and AWS_SECRET_ACCESS_KEY

S3_BUCKET=your-s3-bucket-name
S3_MODEL_KEY=epoch20.pt
LOCAL_MODEL_PATH=/app/weights/epoch20.pt

# Frontend Configuration
VITE_API_URL=https://api.settinel.lat
